<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/backimg"
    android:orientation="vertical"
    tools:context=".aboutActivity">

    <include layout="@layout/app_title" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20sp"
        android:src="@mipmap/honeywell" />


    <TextView
        android:layout_marginTop="150sp"
        android:layout_marginLeft="28sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RFID盘点"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/txtver"
        android:layout_marginLeft="28sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="v 1.0"
        android:textColor="@color/white"
        android:textSize="18sp" />
    <TextView
        android:layout_marginLeft="28sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="copyright @ 2021"
        android:textColor="@color/white"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/txtlcviense"
        android:layout_marginLeft="28sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="未授权"
        android:textColor="@color/red1"
        android:textSize="18sp" />
    <Button
        android:id="@+id/btnscan"
        android:textStyle="bold"
        android:text="扫描许可二维码"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="12sp"
        android:layout_marginLeft="12sp"
        android:background="@drawable/btn0_ripple"
        android:layout_width="match_parent"
        android:layout_height="48sp"/>
</LinearLayout>